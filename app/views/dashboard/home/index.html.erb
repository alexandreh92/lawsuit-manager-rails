<h3>Dashboard</h3>
<div class="ui grid">
  <!-- FIRST COLUMN-->
  <div class="four wide column">
    <div class="ui red raised segment">
      <div class="ui header">
        <i class="settings icon"></i>
        <div class="content">
          <div class="sub header">Total de Ações</div>
          31
        </div>
      </div>
    </div>
  </div>
  <!-- SECOND COLUMN-->
  <div class="four wide column">
    <div class="ui red raised segment">
      <div class="ui header">
        <i class="settings icon"></i>
        <div class="content">
          <div class="sub header">Audiências no Mês</div>
          15
        </div>
      </div>
    </div>
  </div>
  <!-- THIRD COLUMN-->
  <div class="four wide column">
    <div class="ui red raised segment">
      <div class="ui header">
        <i class="settings icon"></i>
        <div class="content">
          <div class="sub header">Audiências na Semana</div>
          10
        </div>
      </div>
    </div>
  </div>
  <!-- FOURTH COLUMN-->
  <div class="four wide column">
    <div class="ui red raised segment">
      <div class="ui header">
        <i class="settings icon"></i>
        <div class="content">
          <div class="sub header">Audiências no Dia</div>
          02
        </div>
      </div>
    </div>
  </div>
  <div class="sixteen wide column">
    <div class="ui raised segments">
      <div class="ui segment">
        <h4>Calendário</h4>
      </div>
      <div class="ui segment">
        <%= month_calendar events: @lawsuits do |date, lawsuits| %>
          <b><%= I18n.l(date) %></b>
          <% lawsuits.each do |lawsuit| %>

              
              <%= link_to (dashboard_lawsuit_path(lawsuit.id)), :class => 'ui label calendar' do %>
              
                <%= lawsuit.autos %>
              <% end %>

          <% end %>
        <% end %>
      </div>
      <div class="ui segment">
      </div>
    </div>
  </div>
</div>
