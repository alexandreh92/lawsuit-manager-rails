<!DOCTYPE html>
<html>

<head>
  <title>Dashboard</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'dashboard/dashboard', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'dashboard/dashboard' %>
  <%= csrf_meta_tags %>
</head>

<body>
    <div class="ui sidebar vertical left menu overlay inverted visible">
        <div class="item logo">
          <img src="https://image.flaticon.com/icons/svg/866/866218.svg" /><img
            src="https://image.flaticon.com/icons/svg/866/866218.svg" style="display: none" />
        </div>
        <%= link_to  "Dashboard", dashboard_path, class:"item" %>
        <%= link_to  "Contacts", dashboard_contacts_path, class:"item" %>
        <%= link_to  "Lawsuits", dashboard_lawsuits_path, class:"item" %>
      </div>
    
      <div class="pusher">
        <div class="ui menu asd borderless"
          style="border-radius: 0!important; border: 0; margin-left: 260px;">
          <div class="right menu">
            <div class="ui dropdown link item">
              <div class="text"><%= current_user.name %></div>
              <i class="dropdown icon"></i>
              <div class="menu">
                <a class="item" href="#link1"><i class="user icon"></i>Perfil</a>
                <div class="divider"></div>
                <%= link_to destroy_user_session_path, method: :delete, class:"item" do %>
                <i class="sign-out alternate icon"></i>Logoff
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div style="margin-left: 260px">
          <div class="ui main container">
            <%= yield %>
          </div>
        </div>
      </div>

</body>
<script>
  $('.right.menu .dropdown')
  .dropdown({
    action: 'hide'
  })
;
</script>
</html>